CREATE TABLE созвездия (
    ID INT PRIMARY KEY,
    Name VARCHAR(255),
    Description TEXT
);

CREATE TABLE звезды (
    ID_Zvezda INT PRIMARY KEY,
    название VARCHAR(255),
    Ox DECIMAL(10, 2),
    Oy DECIMAL(10, 2),
    Description TEXT,
    ID_Sozvezdie INT,
    Razmer VARCHAR(50),
    FOREIGN KEY (ID_Sozvezdie) REFERENCES созвездия(ID)
);